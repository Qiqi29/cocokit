{
    "compilerOptions": {
        "target": "ES2020",         // 设置目标编译版本
        "module": "ESNext",         // 使用 ESNext 模块规范
        "outDir": "./dist",         // 编译输出的目录
        "declaration": true,        // 生成 .d.ts 声明文件
        "esModuleInterop": true,    // 兼容 CommonJS 和 ES 模块的导入方式
        "skipLibCheck": true,       // 跳过库文件的类型检查（提高编译速度）
        "strict": true,             // 启用严格类型检查
        "forceConsistentCasingInFileNames": true    // 严格检查文件名大小写
    },
    // 需要编译的文件
    "include": [
        "src/*.ts",
        "index.ts"
    ],
    // 排除的文件
    "exclude": [
        "node_modules"
    ]
}